<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appclientefissare">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.init.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.ClientActivity"
            android:label="@string/title_activity_client"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activity.ProveedorActivity"
            android:label="@string/title_activity_proveedor"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".activity.init.IngresarcomoActivity" />

        <activity android:name=".activity.init.LoginProveedorActivity" />
        <activity android:name=".activity.init.LoginClienteActivity" />

        <activity android:name=".activity.init.RegisterProveedorActivity" />
        <activity android:name=".activity.init.RegisterClientActivity" />

    </application>

</manifest>