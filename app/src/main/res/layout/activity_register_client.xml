<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#929ED4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appclientefissare.activity.RegisterClientActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/fissareicon" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="Cedula:"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/register_client_cedula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:hint="Ej: 0145555555" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="Nombres:"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/register_client_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:hint="Ej: Juan Jose Perez" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="Dirección:"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/register_client_direccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:hint="Ej: Calle A NN y Calle B" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="Telf. Fijo:"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/register_client_telfijo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:hint="Ej: 072880922" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="Telf. Móvil:"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/register_client_telmovil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:hint="Ej: 0980872765" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="Email:"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/register_client_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:hint="Ej: jperez@dominio.com" />
            </LinearLayout>

            <Button
                android:id="@+id/accept_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aceptar"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"/>



        </LinearLayout>


    </ScrollView>

</LinearLayout>
